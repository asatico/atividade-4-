#include <stdio.h> 
#include <stdlib.h>
#include <unistd.h>
#include <locale.h>
void swarp(int *a, int *b){
    int temp = *a;
    *a = *b;
    *b = temp;
}
void selectionSort(int arr[], int n){
    int i, j, min;

    for ( i = 0; i < n - 1; i++){
        min = i;

        for (j = i + 1; j < n; j++){

            if (arr[j] < arr[min]){
                min = j;
            }
        }
        if (min != i ){
            swarp (&arr[min], &arr[i]);
        }
    }
}
// funÃ§ao para imprimir o codigo.
void inprimir(int arr[], int size){
    int i;
    for ( i = 0; i < size; i++){
        printf("%d",arr[i]);
    }
    printf("\n");   
}
int main(){
    int arr[] = {64, 25, 12, 22, 11};
    int n = sizeof(arr) / sizeof(arr[0]);
    system("chcp 65001");
    system("color f9");
    setlocale(LC_ALL,"portuguse");
    system("cls");

    printf("original: \n");
    inprimir(arr, n);

    selectionSort(arr, n );

    printf("Ordenado: \n");
    inprimir(arr, n);

    return 0;
}
